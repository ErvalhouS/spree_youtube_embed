<div data-hook="admin_image_form_fields" class="row">
  <div class="col-md-6">
    <div data-hook="video" class="form-group">
      <%= f.label :attachment, "Youtube URL" %>
      <%= f.text_area :attachment, :rows => 1, :class => 'form-control' %>
    </div>
    <div data-hook="variant" class="form-group">
      <%= f.label :variant_id, Spree::Variant.model_name.human %>
      <%= f.select :variant_id, @variants, {}, {:class => 'select2'} %>
    </div>
  </div>
  <div data-hook="alt_text" class="col-md-6">
    <div class="form-group">
      <%= f.label :alt, Spree.t(:alt_text) %>
      <%= f.text_area :alt, :rows => 4, :class => 'form-control' %>
    </div>
  </div>
</div>
