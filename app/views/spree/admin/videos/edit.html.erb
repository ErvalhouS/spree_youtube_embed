<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :videos } %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @video } %>

<%= form_for [:admin, @product, @video], html: { multipart: true } do |f| %>
  <div data-hook="edit_image" class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">
        <%= @video.attachment%>
      </h1>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <div class="col-md-9">
          <%= render partial: 'form', locals: { f: f } %>
        </div>

        <div class="form-actions" data-hook="buttons">
          <%= button Spree.t('actions.update'), 'save' %>
          <span class="or"><%= Spree.t(:or) %></span>
          <%= button_link_to Spree.t('actions.cancel'), spree.admin_product_videos_url(@product), id: 'cancel_link', icon: 'delete' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
